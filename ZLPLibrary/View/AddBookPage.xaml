<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ZLPLibrary.ViewModel"
             x:DataType="viewmodel:AddBookPageViewModel"
             x:Class="ZLPLibrary.View.AddBookPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="0" 
                         Grid.ColumnSpan="2"
                         FlowDirection="LeftToRight" 
                         BackgroundColor="#FFAD73"
                         Orientation="Horizontal" 
                         Padding="3">
                <Image Source="Berserk.png"
                       HorizontalOptions="EndAndExpand"
                       Scale="0.8"/>
                <Label Text="ZalupaLibrary"
                       LineHeight="1.8"
                       TextColor="Black"
                       FontFamily="Roboto-Medium"
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="StartAndExpand"
                       FlexLayout.Basis="51"/>
            </StackLayout>
            <Label Text="Назад"
                   TextColor="Black"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   HeightRequest="40"
                   WidthRequest="58"
                   HorizontalOptions="Start"
                   Padding="5">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTappedToBack"/>
                </Label.GestureRecognizers>
            </Label>
            <StackLayout Grid.Row="1"
                         Grid.ColumnSpan="2">
                <Entry x:Name="bookNameEntry"
                       Placeholder="Название книги"
                       Completed="Completed"/>
                <Entry x:Name="authorsEntry"
                       Placeholder="Имя автора"
                       Completed="Completed"/>
                <Entry x:Name="numberOfPageEntry"
                       Placeholder="Количество страниц"
                       Keyboard="Numeric"
                       Completed="Completed"/>
                <Entry x:Name="publishingHouseEntry"
                       Placeholder="Дом издания"
                       Completed="Completed"/>
                <Entry x:Name="yearOfPublishingEntry"
                       Placeholder="Год издания"
                       Keyboard="Numeric"
                       Completed="Completed"/>
                <Button Text="Добавить книгу"
                        Command="{Binding AddBookPageViewModel.AddNewBookCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>